<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_transaksi_detail"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white"
        android:theme="@style/ToolbarTheme"
        android:elevation="2dp">
        <TextView
            android:id="@+id/title_transaksi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="24sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/layout_transaksi_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_transaksi_detail"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/sub_title_transaksi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penukaran Pulsa"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/date_transaksi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/08/2012"
            android:textSize="12sp"
            android:layout_alignParentRight="true"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/desc_transaksi_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_title_transaksi_detail"
            android:layout_marginTop="26dp"
            android:text="Pulsa sebesar 50000 dengan nomor kartu Tri Indonesia 08992220222 berhasil ditukar kan. Sisa saldo anda sebesar Rp. 144.000 "
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:justificationMode="inter_word"
            android:gravity="fill"
            android:textAlignment="gravity"/>
    </RelativeLayout>
</RelativeLayout>