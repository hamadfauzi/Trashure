<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Feature.Beranda.BerandaFragment">

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_beranda"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/notifikasi"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/bell_vector"
                        android:layout_toLeftOf="@+id/setting"
                        android:layout_marginRight="24dp"
                        android:layout_centerVertical="true"/>
                    <ImageButton
                        android:id="@+id/setting"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/setting_vector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/layout_beranda_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_menu_beranda"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/toolbar_beranda"
            >

            <TextView
                android:id="@+id/dompet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOMPET"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingVertical="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/tv_saldo_beranda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.150.000"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingVertical="12dp"
                android:textStyle="bold"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_beranda_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_menu_green"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/layout_beranda_1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp">
                <TextView
                android:id="@+id/ket_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level :"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_level_beranda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Trashure Sejati"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/separator"
                android:layout_width="2dp"
                android:layout_height="70dp"
                android:background="@drawable/separator"
                android:layout_centerInParent="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/ket_trashbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trashbag :"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_status_trashbag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Tidak Terhubung"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_beranda_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/layout_beranda_2"
            >

            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sampah_terkumpul"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/sub_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/dummy_chart" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_beranda_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/layout_beranda_3">
            <TextView
                android:id="@+id/setoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setoran"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihat_semua"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListNotes"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_setoran"
            android:layout_below="@+id/layout_beranda_4"
            tools:itemCount="4"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/layout_beranda_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/rvListNotes">
            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips"
                android:textSize="20sp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                />
        </RelativeLayout>
        <in.goodiebag.carouselpicker.CarouselPicker
            android:id="@+id/carouselPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="8dp"
            app:items_visible="three"
            android:layout_below="@+id/layout_beranda_5">

        </in.goodiebag.carouselpicker.CarouselPicker>

    </RelativeLayout>-->

</android.support.v4.widget.NestedScrollView>