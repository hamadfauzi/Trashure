<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".Feature.Akun.AkunFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:textSize="26sp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorText"/>
        </Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_below="@id/tool_bar"
            android:background="@drawable/bg_white">
                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Rafif"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="52dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_profile_name"
                android:layout_marginTop="58dp"
                android:layout_marginLeft="16dp">
                <ImageButton
                    android:id="@+id/edit_button"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_editprofile"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_profile_name"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:weightSum="9"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:background="@drawable/corner">

                <RelativeLayout
                    android:id="@+id/ll_level"
                    android:gravity="start"
                    android:layout_weight="3"
                    android:layout_marginTop="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/gbr_lvl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_crown"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/ket_lvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Level"
                        android:layout_below="@id/gbr_lvl"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tv_level_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Demon King"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@id/ket_lvl"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_toRightOf="@id/ll_level"
                    android:id="@+id/ll_saldo"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:id="@+id/gbr_saldo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_bank"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/ket_saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Saldo"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/gbr_saldo"/>

                    <TextView
                        android:id="@+id/tv_saldo_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Rp.15.000"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/ket_saldo"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_toRightOf="@id/ll_saldo"
                    android:id="@+id/ll_trash"
                    android:layout_weight="3"
                    android:layout_alignParentEnd="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp">

                    <ImageView
                        android:id="@+id/gbr_sampah"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iconfinder_trash"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/ket_sampah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Total"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/gbr_sampah"/>

                    <TextView
                        android:id="@+id/tv_totalsampah_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="24 kg"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_below="@id/ket_sampah"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/rl_profile"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor HP"/>

                <TextView
                    android:id="@+id/tv_nohandphone_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="0882882882"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/ll1"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>

                <TextView
                    android:id="@+id/tv_email_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="check@gmail.com"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/ll2"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"/>

                <TextView
                    android:id="@+id/tv_tgl_lahir_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="27 - Jul - 1998"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_keluar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_btn"
                android:text="Keluar"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_below="@+id/ll3"
                android:padding="10dp"
                />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dummy_foto"
            android:layout_below="@id/tool_bar"
            android:layout_marginTop="44dp"
            />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>